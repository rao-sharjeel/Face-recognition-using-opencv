import os
import face_recognition as fr
import cv2

known_faces_dir = "known_faces"
unknown_faces_dir = "unknown_faces"
tolerance = 0.5
frame_thickness = 3
font_thickness = 2
MODEL = "HOG" # if not working write HOG here

print("importing Completed. \nLoading known faces")

known_faces = []
known_names = []

for name in os.listdir(known_faces_dir):
    for filename in os.listdir(f'{known_faces_dir}/{name}'):
        image = fr.load_image_file(f'{known_faces_dir}/{name}/{filename}')

        scale_percent = 30  # percent of original size
        width = int(image.shape[1] * scale_percent / 100)
        height = int(image.shape[0] * scale_percent / 100)
        dim = (width, height)

        # resize image
        image = cv2.resize(image, dim, interpolation=cv2.INTER_AREA)

        encoding = fr.face_encodings(image)[0]
        known_faces.append(encoding)
        known_names.append(name)

print("Processing unknown faces")
for filename in os.listdir(unknown_faces_dir):
    print(filename)
    image = fr.load_image_file(f'{unknown_faces_dir}/{filename}')

    scale_percent = 40  # percent of original size
    width = int(image.shape[1] * scale_percent / 100)
    height = int(image.shape[0] * scale_percent / 100)
    dim = (width, height)

    # resize image
    image = cv2.resize(image, dim, interpolation=cv2.INTER_AREA)

    locations = fr.face_locations(image, model=MODEL)
    encoding = fr.face_encodings(image, locations)
    image = cv2.cvtColor(image, cv2.COLOR_RGB2BGR)

    for face_encoding, face_location in zip(encoding, locations):
        results = fr.compare_faces(known_faces, face_encoding, tolerance)
        match = None
        if True in results:
            match = known_names[results.index(True)]
            print(f"Match found: {match}")

            top_left = (face_location[3], face_location[0])
            bottom_right = (face_location[1], face_location[2])
            color = (0, 255, 0)

            cv2.rectangle(image, top_left, bottom_right, color, frame_thickness)

            top_left = (face_location[3], face_location[2])
            bottom_right = (face_location[1], face_location[2] + 22)
            cv2.rectangle(image, top_left, bottom_right, color, cv2.FILLED)
            cv2.putText(image,match, (face_location[3]+10, face_location[2]+15), cv2.FONT_HERSHEY_DUPLEX, 0.5, (100, 100, 100), font_thickness)

    cv2.imshow(filename, image)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
